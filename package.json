{
  "name": "cdm-optimiser",
  "version": "1.0.0",
  "description": "CDM Optimiser",
  "author": "CDM Optimiser Developers",
  "license": "MIT",
  "main": "main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"cd frontend && npm run dev\" \"electron .\"",
    "dist": "npm run build:frontend && electron-builder",
    "lint": "eslint .",
    "pack": "electron-builder --dir",
    "postinstall": "cd frontend && npm install",
    "prettier": "npx prettier . --write",
    "start": "npm run build:frontend && electron ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "node-fetch": "^3.3.2",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.1"
  },
  "build": {
    "appId": "com.cdm-optimiser.cdm-optimiser",
    "productName": "CDM Optimiser",
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "frontend/dist/**"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CDM-Optimiser/cdm-optimiser.git"
  }
}
